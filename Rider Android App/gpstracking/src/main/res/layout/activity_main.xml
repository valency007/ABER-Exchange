<?xml version="1.0" encoding="utf-8"?>

<com.hlab.animatedPullToRefresh.AnimatedPullToRefreshLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pullToRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:animationSpeed="fast"
    app:headerBackgroundColor="#ffffff"
    app:headerLoopAnimIteration="1"
    app:headerLoopAnimation="zoom"
    app:headerText="LOADING"
    app:headerTextAnimIteration="1"
    app:headerTextAnimation="rotateCW"
    app:headerTextColor="#2B2B2B"
    app:headerTextColorAnimationEnabled="true">




    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:padding="5dp"
        tools:context=".MainActivity"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Aber Exchange"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:background="@color/colorAccent"
            android:textColor="#ffffff"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:text="Swipe to Refresh\nMove to zone-center for more orders"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:textColor="#515658"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/cartoon"
            android:layout_centerInParent="true"
            android:id="@+id/text1"
            />




        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Completed Orders" />


    </RelativeLayout>

</com.hlab.animatedPullToRefresh.AnimatedPullToRefreshLayout>